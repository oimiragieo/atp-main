{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://atp-project/schemas/mcp/v1.0/error.json",
  "title": "MCP Error Message Schema",
  "description": "Schema for MCP error messages",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "error",
      "description": "Message type identifier"
    },
    "error": {
      "type": "object",
      "description": "Error details",
      "properties": {
        "code": {
          "type": "string",
          "description": "Error code identifier",
          "enum": [
            "INTERNAL_ERROR",
            "IDLE_TIMEOUT",
            "CANCELLED",
            "INVALID_REQUEST",
            "TOOL_NOT_FOUND",
            "RATE_LIMITED",
            "AUTHENTICATION_FAILED",
            "PERMISSION_DENIED"
          ]
        },
        "message": {
          "type": "string",
          "description": "Human-readable error message"
        },
        "details": {
          "type": "object",
          "description": "Additional error details",
          "additionalProperties": true
        }
      },
      "required": ["code", "message"]
    },
    "toolCallId": {
      "type": "string",
      "description": "Tool call ID if error is related to a specific tool call"
    },
    "aborted": {
      "type": "boolean",
      "description": "Whether the operation was aborted"
    },
    "model_used": {
      "type": "string",
      "description": "Model that was being used when error occurred"
    }
  },
  "required": ["type", "error"]
}
