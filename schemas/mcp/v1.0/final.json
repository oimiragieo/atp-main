{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://atp-project/schemas/mcp/v1.0/final.json",
  "title": "MCP Final Message Schema",
  "description": "Schema for MCP final response messages",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "final",
      "description": "Message type identifier"
    },
    "toolCallId": {
      "type": "string",
      "description": "Unique identifier for the completed tool call"
    },
    "final": {
      "type": "boolean",
      "const": true,
      "description": "Indicates this is the final message"
    },
    "aborted": {
      "type": "boolean",
      "description": "Whether the operation was aborted"
    },
    "error": {
      "type": "string",
      "description": "Error code if the operation failed"
    },
    "model_used": {
      "type": "string",
      "description": "The model that was ultimately used"
    },
    "total_tokens": {
      "type": "integer",
      "minimum": 0,
      "description": "Total tokens consumed"
    },
    "latency_ms": {
      "type": "number",
      "minimum": 0,
      "description": "Total latency in milliseconds"
    },
    "cost_usd": {
      "type": "number",
      "minimum": 0,
      "description": "Total cost in USD"
    },
    "metadata": {
      "type": "object",
      "description": "Final response metadata",
      "properties": {
        "experiment_id": {
          "type": "string",
          "description": "Experiment identifier if A/B testing was used"
        },
        "winner_model": {
          "type": "string",
          "description": "Winning model in champion/challenger experiment"
        },
        "quality_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Quality score of the final response"
        }
      }
    }
  },
  "required": ["type", "final"]
}
