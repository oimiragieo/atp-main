{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://atp-project/schemas/mcp/v1.0/base.json",
  "title": "MCP Base Message Schema",
  "description": "Base schema for all MCP protocol messages",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "The message type identifier",
      "enum": ["toolOutput", "error", "heartbeat", "event", "plan", "final", "listTools", "callTool"]
    }
  },
  "required": ["type"]
}
