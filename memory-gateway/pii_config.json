{
  "enable_ml_detection": true,
  "enable_rule_detection": true,
  "ml_model_name": "dbmdz/bert-large-cased-finetuned-conll03-english",
  "confidence_threshold": 0.8,
  "context_window": 50,
  "max_text_length": 10000,
  "cache_ml_results": true,
  
  "redaction_policies": {
    "public": {
      "email": {
        "action": "mask",
        "visible_chars": 3,
        "preserve_format": true
      },
      "phone": {
        "action": "mask",
        "visible_chars": 4,
        "preserve_format": true
      },
      "person_name": {
        "action": "replace",
        "replacement_text": "[NAME]"
      }
    },
    "internal": {
      "email": {
        "action": "mask",
        "visible_chars": 2,
        "preserve_format": true
      },
      "phone": {
        "action": "mask",
        "visible_chars": 4,
        "preserve_format": true
      },
      "ssn": {
        "action": "replace",
        "replacement_text": "[SSN]"
      },
      "person_name": {
        "action": "replace",
        "replacement_text": "[NAME]"
      }
    },
    "confidential": {
      "email": {
        "action": "replace",
        "replacement_text": "[REDACTED-EMAIL]"
      },
      "phone": {
        "action": "replace",
        "replacement_text": "[REDACTED-PHONE]"
      },
      "ssn": {
        "action": "replace",
        "replacement_text": "[REDACTED-SSN]"
      },
      "credit_card": {
        "action": "replace",
        "replacement_text": "[REDACTED-CC]"
      },
      "person_name": {
        "action": "replace",
        "replacement_text": "[REDACTED-NAME]"
      },
      "address": {
        "action": "replace",
        "replacement_text": "[REDACTED-ADDRESS]"
      }
    },
    "restricted": {
      "email": {
        "action": "hash"
      },
      "phone": {
        "action": "hash"
      },
      "ssn": {
        "action": "hash"
      },
      "credit_card": {
        "action": "hash"
      },
      "person_name": {
        "action": "hash"
      },
      "address": {
        "action": "hash"
      },
      "date_of_birth": {
        "action": "hash"
      }
    },
    "top_secret": {
      "email": {
        "action": "remove"
      },
      "phone": {
        "action": "remove"
      },
      "ssn": {
        "action": "remove"
      },
      "credit_card": {
        "action": "remove"
      },
      "person_name": {
        "action": "remove"
      },
      "address": {
        "action": "remove"
      },
      "date_of_birth": {
        "action": "remove"
      },
      "passport": {
        "action": "remove"
      },
      "driver_license": {
        "action": "remove"
      }
    }
  },
  
  "custom_patterns": {
    "medical_id": [
      {
        "name": "medicare_number",
        "pattern": "\\b\\d{3}-\\d{2}-\\d{4}[A-Z]\\b",
        "description": "Medicare Beneficiary Identifier"
      },
      {
        "name": "npi_number", 
        "pattern": "\\b\\d{10}\\b",
        "description": "National Provider Identifier"
      }
    ],
    "passport": [
      {
        "name": "us_passport",
        "pattern": "\\b[A-Z]{1,2}\\d{6,9}\\b",
        "description": "US Passport Number"
      }
    ],
    "driver_license": [
      {
        "name": "ca_license",
        "pattern": "\\b[A-Z]\\d{7}\\b",
        "description": "California Driver License"
      },
      {
        "name": "ny_license", 
        "pattern": "\\b\\d{3}\\s\\d{3}\\s\\d{3}\\b",
        "description": "New York Driver License"
      }
    ]
  },
  
  "audit_settings": {
    "enable_audit_trail": true,
    "audit_storage_path": "pii_audit_logs",
    "retention_days": 2555,
    "compress_old_logs": true,
    "encrypt_audit_logs": true
  },
  
  "compliance_settings": {
    "gdpr_enabled": true,
    "ccpa_enabled": true,
    "hipaa_enabled": false,
    "data_subject_request_retention_days": 30,
    "automatic_deletion_enabled": false
  }
}