# Environment Variables for ATP Enterprise AI Platform
# Copy this file to .env and fill in your actual values

# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database Configuration
DATABASE_URL=postgresql://atp:password@localhost:5432/atp
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=50

# Security Keys (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-jwt-secret-key-here-change-in-production
CSRF_SECRET_KEY=your-csrf-secret-key-here
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# AI Provider API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# OIDC Configuration (Optional)
OIDC_ENABLED=false
OIDC_ISSUER=https://your-oidc-provider.com
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Cost Management
COST_OPTIMIZATION_ENABLED=true
DEFAULT_DAILY_BUDGET=10.0
DEFAULT_MONTHLY_BUDGET=300.0

# Feature Flags
STREAMING_RESPONSES=true
FUNCTION_CALLING=true
MULTI_MODAL=false
CONSENSUS_ROUTING=false
ADAPTIVE_RATE_LIMITING=false

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=10000
RATE_LIMIT_BURST=1000

# Compliance
PII_DETECTION_ENABLED=true
PII_REDACTION_ENABLED=true
AUDIT_LOGGING_ENABLED=true
DATA_RETENTION_DAYS=30

# Caching
RESPONSE_CACHE_ENABLED=true
RESPONSE_CACHE_TTL=1800
ROUTE_CACHE_ENABLED=true
ROUTE_CACHE_TTL=300

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_WORKERS=2
SERVER_TIMEOUT=300